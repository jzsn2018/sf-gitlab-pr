{
  "name": "sf.gitlab.pr",
  "displayName": "内网PR快速提交工具",
  "description": "内网快速提交PR插件",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sf-pr.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sf-gitlab-pr",
          "title": "内网PR提交",
          "icon": "src/assets/gitlab.svg"
        }
      ]
    },
    "views": {
      "sf-gitlab-pr": [
        {
          "type": "webview",
          "id": "sf-gitlab-pr",
          "name": "PR 配置"
        }
      ]
    },
    "configuration": {
			"title": "GitlabMrt",
			"properties": {
				"gitlabmrt.instanceUrl": {
					"type": "string",
					"default": "https://gitlab.com",
					"description": "Your GitLab instance URL"
				},
				"gitlabmrt.token": {
					"type": "string",
					"default": "",
					"description": "Access token to use to connect to the Gitlab API"
				}
			}
		}
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6"
  }
}
